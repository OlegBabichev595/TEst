@model IEnumerable<Book>

@{
    ViewBag.Title = "Favorites books";
}

<div class="card">
    <div class="card-header">
        <h3>Favorites books</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-sm table-bordered">
            <tr>
                <th>Title</th>
                <th>Author(s)</th>
                <th>Publisher</th>
                <th>Publishing Date</th>
                <th>Rating</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.GetAuthorsString()</td>
                    <td>@book.Publisher</td>
                    <td>@book.GetPublishingDateString()</td>
                    <td>@book.GetRatingString()</td>
                    <td class="text-center">
                        <form asp-action="Remove" style="display: inline">
                            <input type="hidden" name="id" value="@book.Id" />
                            <input type="submit" class="btn btn-secondary" value="Remove" />
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>